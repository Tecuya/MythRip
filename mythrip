class encoderThread(threading.Thread):
    
    def __init__(self,program,threadID):

        self.program = program
        self.threadID = threadID

        # load parent constructor
        threading.Thread.__init__(self)
    
    def run(self):
        
        # grab a reference to the app
        global mythRip

        # snag a reference to the queue wxListCtrl
        queuelist = mythRip.mainFrameInstance.encoderQueueFrame.encoderQueueListCtrl
        
        print "hi im a thread that is supposed to encode ",self.program
        
        # apparently this is not going to work, i'm getting x assertion failures .. come up with the proper way to interface with parent thread's GUI
        queuelist.InsertStringItem(self.threadID, self.program.title)
        queuelist.SetStringItem(self.threadID, 1, self.program.subtitle)
        queuelist.SetStringItem(self.threadID, 2, str(self.program.starttime))
        queuelist.SetStringItem(self.threadID, 3, 'Initializing...')
        queuelist.SetItemData(self.threadID, self.threadID) # set item data to be the same as the indexes initially
        queuelist.SetColumnWidth(0, wx.LIST_AUTOSIZE)
        queuelist.SetColumnWidth(1, wx.LIST_AUTOSIZE)
        queuelist.SetColumnWidth(2, wx.LIST_AUTOSIZE)
        queuelist.SetColumnWidth(3, wx.LIST_AUTOSIZE)

        
